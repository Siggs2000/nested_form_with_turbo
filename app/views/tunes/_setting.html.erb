<div style="border: 1px solid white">
    <div class="card">
        <div class="card-body">
            <%= fields_for "tune[settings_attributes][#{setting.persisted? ? setting.id : Time.now.to_i }]", setting do |ff| %>
                <fieldset class="mb-4">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <%= ff.label 'Setting Name' %><br>
                            <%= ff.text_field :name, placeholder: 'Mast rake, shroud tension, etc', class: "form-control" %>
                            <%= ff.hidden_field :id %>
                        </div>
                    </div>
                </fieldset>
            <% end %>
        </div>
    </div>
</div>
<br>