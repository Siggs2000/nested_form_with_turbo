<% @tune.settings.each do |setting| %>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <fieldset class="mb-4">
                <legend>Setting:</legend>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <%= setting.name %>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <%= setting.point_of_sail %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <%= setting.measurement %>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <%= setting.units %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <%= setting.measured_with %>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
<% end %>